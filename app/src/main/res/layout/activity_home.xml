<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_azure"
    android:padding="24dp">

    <!-- Background watermark logo -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/whole_logo" />

    <!-- Centered content -->
    <LinearLayout
        android:id="@+id/center_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/FacultyAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Access System"
            android:fontFamily="@font/generalsans_bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginBottom="30dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonFacialRecognition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Facial Recognition"
            android:fontFamily="@font/generalsans_medium"
            app:strokeColor="@color/dark_blue"
            app:strokeWidth="1dp"
            app:backgroundTint="#1F5F92"/>

        <Button
            android:id="@+id/buttonAdminPanel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Database"
            android:fontFamily="@font/generalsans_medium"
            app:strokeColor="@color/dark_blue"
            app:strokeWidth="1dp"
            app:backgroundTint="#1F5F92"/>

    </LinearLayout>

</FrameLayout>
