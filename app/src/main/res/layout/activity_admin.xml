<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="0dp"
    android:background="@color/light_blue"
    tools:context=".AdminActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="-10dp">

        <ImageView
            android:layout_width="1330dp"
            android:layout_height="match_parent"
            android:alpha="0.15"
            android:scaleType="centerCrop"

            android:src="@drawable/bsu_background" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Admin Page"
            android:textColor="@android:color/black"
            android:fontFamily="@font/generalsans_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="4dp"
        android:paddingVertical="10dp">

        <!-- Camera preview on the left -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:strokeColor="#0c4171"
            app:strokeWidth="2dp">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons on the right -->
        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- Add Faculty button -->

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/headerlogo" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddFaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:text="Add Faculty"
                android:textColor="@color/white"
                app:backgroundTint="#1E88E5"
                app:cornerRadius="20dp"
                app:strokeColor="@color/blue"
                android:fontFamily="@font/generalsans_medium"
                app:strokeWidth="2dp" />

            <!-- Delete Faculty button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDeleteFaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:text="Delete Faculty"
                android:textColor="@android:color/white"
                app:backgroundTint="#E53935"
                app:cornerRadius="20dp"
                app:strokeColor="@color/dark_red"
                android:fontFamily="@font/generalsans_medium"
                app:strokeWidth="2dp" />

            <!-- Import Drive button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonImportLocalImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:text="Import Photos"
                android:textColor="@android:color/white"
                app:backgroundTint="#43A047"
                app:cornerRadius="20dp"
                app:strokeColor="@color/dark_green"
                android:fontFamily="@font/generalsans_medium"
                app:strokeWidth="2dp" />

            <!-- Generate Embeddings button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonGenerateEmbeddings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:text="Update Dataset"
                android:textColor="@android:color/white"
                app:backgroundTint="#fb9b1e"
                app:cornerRadius="20dp"
                app:strokeColor="@color/dark_orange"
                android:fontFamily="@font/generalsans_medium"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status TextView -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="623dp"
        android:layout_height="47dp"
        android:layout_below="@id/topLayout"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:text="Status messages will appear here"
        android:textColor="@color/black"
        android:fontFamily="@font/generalsans_regular"
        android:textSize="18sp"
        android:textStyle=""/>

</RelativeLayout>
